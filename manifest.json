{
    "manifest_version": 2,
    "name": "GO 语言中文网阅读小助手",
    "description": "GO 语言中文网推出的阅读小助手，让你不错过任何信息！",
    "version": "1.0",
    "background": {
        "scripts": [ "js/background.js" ],
        "persistent": false
    },
    "chrome_url_overrides": {
        "newtab": "html/newtab.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": "img/icon/icon_32.png",
        "default_tirle": "Go中文网分享阅读插件",
        "default_popup": "html/click_popup_page.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/contentScript.js"
            ]
        }
    ]
}